<%- include('partials/head.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <div class="card" id="ask-form">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/savequestion">
          <label for="title">Título</label>
          <input type="text" placeholder="Título" name="title" class="form-control">
          <br>
          <label for="description">Descrição</label>
          <textarea placeholder="Descreva sua pergunta aqui" name="description" class="form-control"></textarea>
          <br>
          <button class="btn btn-dark" type="submit">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('partials/scripts.ejs') %>
